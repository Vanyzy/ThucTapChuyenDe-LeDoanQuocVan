@model List<LeVCarStore.Models.ChiTietDonHang>

<h2>Giỏ Hàng</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SanPham.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.Gia.ToString("C")</td>
                    <td>@(item.SoLuong * item.Gia).ToString("C")</td>
                    <td><a href="@Url.Action("Remove", new { id = item.SanPhamID })" class="btn btn-danger">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Tổng cộng: </strong>@Model.Sum(i => i.SoLuong * i.Gia).ToString("C")</p>
    <a href="@Url.Action("Checkout")" class="btn btn-primary">Thanh Toán</a>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
